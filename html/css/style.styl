color_lila = #9F4180
border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

box-shadow()
  -webkit-box-shadow arguments 
  -moz-box-shadow arguments 
  box-shadow arguments 

opacity(n)
      opacity n
      if support-for-ie
        filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(n * 100) + ')')

body
	background #e2e2e2
	font-size 16px
	font-family 'Myriad Pro Light'
	color #6D6D6D

ul, li
	margin 0
	padding 0
	list-style none

header
	background-image url('../images/bg_banner.png')
	background-color color_lila
	background-repeat no-repeat
	height 93px
	width 960px
	box-shadow 0px 1px 5px 0px #353535
	position relative
	z-index 1

	.row
		margin 0

	.col-md-6
		padding 0

	#logo 
		padding 5px 0 0 9px

		a
			background url('../images/sprite.png')
			display block
			width 223px
			height 80px

	.search
		margin 39px 0 0 67px
		width 213px
		height 26px		
		position relative
		display inline-block
		vertical-align top

		.bg_search
			background-color #000
			width 213px
			height 26px	
			border-radius(13px)
			opacity(0.2)
			position absolute
			top 0
			left 0
			z-index 0

		.input-search
			border 0
			color #fff
			background none
			position absolute
			z-index 10
			outline 0
			left 12px
			width 174px
			height 18px
			top 4px
			font-size 1em
			line-height 18px

		.btn-search
			border 0
			background url('../images/sprite.png') -2px -149px
			width 23px 
			height 20px
			position absolute
			left 186px
			top 5px
			cursor pointer
			cursor hand
			z-index 10
			outline 0

	.social
		width 190px
		display inline-block
		vertical-align top
		margin 20px 0 0

		li 				
			display inline-block
			width 46px
			margin 0 7px
			text-align center
			font-size 0.85em
			color #fff

			a 
				height 36px
				width 36px
				display inline-block
				background-image url('../images/sprite.png')

			.tw
				background-position -4px -90px	
			.fb
				background-position -67px -90px				
			.gp
				background-position -129px -90px	

nav
	width 960px
	background url('../images/sprite_fondos.png') repeat-x
	text-align right
	position relative

	.menu
		margin-right 11px

		li 
			margin-left 4px
			display inline-block
			height 35px
			border-radius(0 0 10px 10px)

			a
				padding 0 8px 
				display block
				height 32px
				color #6D6D6D
				font-size 1em
				margin-top 5px			
			
		li:hover, li.active
			background-color color_lila
			height 31px
			background-image url('../images/sprite_fondos.png')
			background-position 0 -37px
			background-repeat repeat-x

			a
			    text-decoration none
			    color #fff
	
	.user_options
		height 42px
		border-bottom 1px solid #d8d8d8
		background-color #F1F1F1
		margin 0		

		.view_options	
			text-align left
			margin 0 0 0 10px	

			li 
				display inline-block
				margin 0 13px 0 0
				padding-top 6px
				height 42px
				vertical-align top

				a 
					width 28px
					height 29px
					display inline-block
					background-color #a5a5a5
					vertical-align top
					background-image url('../images/sprite.png')
				a:hover, .active
					background-color color_lila
			.v1 a 
				background-position -58px -142px
			.v2 a 
				background-position -101px -142px
			.v3 a 
				background-position -142px -142px
			.v4
				border-left 1px solid #d8d8d8
				text-align right
				width 767px		
				padding-top 0		

				a 
					width auto
					background none
					color #6D6D6D

					span
						vertical-align top
						margin 10px 8px 0 0
						display inline-block

					.icon_v4
						height 38px
						width 38px
						border-radius(20px)
						background-color color_lila
						background-image url('../images/sprite.png')
						background-position -186px -93px
						display inline-block
						vertical-align top
						margin-top 2px
				a:hover
					background-color #F1F1F1
			

			.v5
				border-left 1px solid #d8d8d8
				padding-left 10px
				margin-right 8px

				a
					background-color color_lila
					background-position -192px -142px

#banner
	padding 10px 10px 40px 10px
	background #fff
	border-bottom 1px solid #d8d8d8
	width 960px

	.left_banner
		width 300px
		margin-right 15px
		display inline-block
		vertical-align top

		.p1
			box-shadow 1px 2px 7px 0px #5f5f5f
		.p2
			margin-top 14px
			box-shadow 1px 2px 7px 0px #5f5f5f

	.right_banner
		width 625px
		display inline-block
		vertical-align top
		box-shadow 1px 2px 7px 0px #5f5f5f

		.paginate
			height 34px
			text-align center

#news
	background #fff
	width 960px
	margin-top 14px
	border-top 1px solid #d8d8d8
	padding 28px 10px 40px

	.title_news
		height 32px
		color color_lila
		font-size 2.25em
		text-align center
		line-height 38px

	.option_news
		margin-top 15px
		height 32px

		li 
			display inline-block
			vertical-align top
			font-size 0.95em

			a
				color #6d6d6d
				margin 0 8px 0
				display inline-block
				vertical-align top

			a:hover, .active
				color color_lila
				text-decoration none

			.circle
				display inline-block
				background color_lila
				height 6px
				width 6px
				border-radius(3px)				
				vertical-align top
				margin-top 9px

		li:first-child .circle
			display none

	article
		width 300px
		display inline-block
		vertical-align top		
		box-shadow 1px 1px 4px 0px #6d6d6d
		margin 0 0 20px 20px

		.media 
			height 178px
			width 300px
			display block
			padding 10px 10px 0
		.text 
			height 77px 
			font-size 1.1em
			line-height 21px
			padding 10px 10px 5px
		.opt
			height 27px
			background-color #e2e2e2
			width 300px
			padding 0 10px

			li 
				display inline-block
				vertical-align top
				font-size 0.8em

				a 
					color #6D6D6D
			.e1
				width 127px
				padding-top 8px
			.e2 a 
				width 28px
				height 20px
				background url('../images/sprite.png') 0 -191px
				display block
				margin-top 4px
			.e3
				padding 8px 20px 0 0
				background url('../images/sprite.png') 205px -188px
				width 125px
				text-align right

	article:nth-child(3n+1)
		margin-left 0 
